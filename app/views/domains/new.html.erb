<% provide :submit_button, t("common.create_button") %>
<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-success">
    <div class="panel-heading text-center">
      <%= t "domain" %>
    </div>
    <div class="panel-body">
      <%= form_for Domain.new do |f| %>
        <%= render "shared/error_messages", object: Domain.new %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name,  class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :status %><br>
          <%= f.select :status,
            Domain.statuses.keys.map{|status| [status.titleize, status]},
            {}, {class: "form-control inline"} %>
        </div>
        <%= link_to t("common.back_button"), :back, class: "btn btn-warning" %>
        <%= f.submit yield(:submit_button),
          class: "btn btn-primary space-top-submit" %>
      <% end %>
    </div>
  </div>
</div>
